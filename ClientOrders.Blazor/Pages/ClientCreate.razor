@page "/clients/create"
@using ClientOrders.Core
@using ClientOrders.Infrastructure
@inject AppDbContext Db
@inject NavigationManager Nav

<PageTitle>New Client</PageTitle>

<h3>Create Client</h3>

<EditForm Model="_client" OnValidSubmit="Save">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Name</label><br />
        <InputText @bind-Value="_client.Name" />
    </div>

    <br />

    <button type="submit">Save</button>
    <button @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    private Client _client = new();
    private string? error;

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(_client.Name))
        {
            error = "Client name is required.";
            return;
        }
        Db.Clients.Add(_client);
        await Db.SaveChangesAsync();
        Nav.NavigateTo("/clients");
    }
    private void Cancel()
    {
        Nav.NavigateTo("/clients");
    }
}
