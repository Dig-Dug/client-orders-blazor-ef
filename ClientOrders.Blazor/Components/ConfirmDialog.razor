@using MudBlazor


<MudDialog>
<DialogContent>
    <MudText Typo="Typo.h6">@ContentText</MudText>
</DialogContent>
<DialogActions>
        <MudButton Color="Color.Default" OnClick="Cancel">
            Cancel
        </MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Confirm">
            Delete
        </MudButton>
</DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string ContentText {get; set;} = "Are you sure?";

    void Confirm() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}